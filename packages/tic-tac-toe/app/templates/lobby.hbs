<ApplicationLayout>
  <div class="w-100">
    <div class="lobby-header">
      <div class="lobby-header-title">
        Games
      </div>
      <button type="button" class="lobby-new-game" {{on "click" (set this.showOpenGameModal true)}}>
        Create a game
      </button>
    </div>
    <div class="mt-5">
      <div class="lobby-ogc-container">
        {{!-- {openGames.map(openGame => (
        <OpenGameEntry key="{openGame.address}" openGame="{openGame}" joinOpenGame="{joinOpenGame}" />
        ))} --}}
      </div>
    </div>
  </div>
  <CreatingOpenGameContainer @isOpen={{this.showOpenGameModal}} @onHidden={{set this.showOpenGameModal false}}/>
</ApplicationLayout>