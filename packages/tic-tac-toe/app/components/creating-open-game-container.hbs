<BsModal @open={{@isOpen}} @onHidden={{this.modalClosed}} as |modal|>
  <modal.header class="rules-header">
    Create A Game
  </modal.header>
  <modal.body>
    <form class="cog-form">
    {{!-- <form class="cog-form" onSubmit={{fn this.createOpenGameHandler}}> --}}
      <fieldset class="form-group">
        <label htmlFor="buyin">
          Enter Game Buy In Amount
        </label>
        <div class="cog-input-group">
          <input
            class="cog-input form-control"
            name="buyin"
            id="buyin"
            value={{this.buyIn}}
            {{on "input" this.handleBuyInChange}}
          />
          <div>
            ETH
          </div>
        </div>
        <small class="form-text text-muted">
          Please enter an amount between
          {{this.MIN_BUYIN}}
          and
          {{this.MAX_BUYIN}}
        </small>
        <small class="form-text text-danger cog-error-message">
          {{this.errorMessage}}
        </small>
        <div class="mt-2">
          Round Buy In:
          {{this.roundBuyIn}}
        </div>
        <small class="form-text text-muted">
          This is 20% of the game buy in amount.
        </small>
      </fieldset>
      <BsButton
        class="cog-button"
        type="submit"
        @disabled={{this.isSubmitDisabled}}
      >
        Create Game
      </BsButton>
    </form>
  </modal.body>
</BsModal>